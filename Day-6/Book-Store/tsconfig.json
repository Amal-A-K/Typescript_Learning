{
  "compilerOptions": {
    "target": "ES6",                
    "module": "ESNext",             
    "lib": ["ES6", "DOM"],                    
    "outDir": "./dist",             
    "rootDir": "./src",            

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"      
  },
  "include": ["src/**/*"],         
  "exclude": ["node_modules", "dist"] // *** Tell TypeScript which files/folders to ignore ***
}